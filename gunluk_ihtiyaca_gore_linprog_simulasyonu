print(f"{'-'*45} {'-'*15} {'-'*15}")

print(f"{'GER√áEK DURUM (Eyl√ºl)':<45} {'%55':<15} {'%60':<15}")
print(f"{'-'*45} {'-'*15} {'-'*15}")

for result in all_results:
    name = result['scenario'].replace('Test ', 'T')
    if result['avg_outsource_pct'] is not None:
        daily = f"%{result['avg_outsource_pct']:.1f}"
        peak = f"%{result['avg_peak_outsource_pct']:.1f}"
    else:
        daily = "√á√∂z√ºm yok"
        peak = "√á√∂z√ºm yok"
    
    print(f"{name:<45} {daily:<15} {peak:<15}")

print("\n‚úì Testler tamamlandƒ±!")
